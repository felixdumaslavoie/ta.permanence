---
import { getCollection } from "astro:content";
import APropos from "../../layouts/Informative.astro";

const archives = await getCollection("about");

let index = 0;

const lang = "fr";

archives.forEach((archive, idx) => {
  if (archive.id.split("/")[0] === lang) index = idx;
});

const props = await archives[index].render();
const { Content } = await archives[index].render();
---

<APropos props={props}  >
  <Content />
</APropos>
