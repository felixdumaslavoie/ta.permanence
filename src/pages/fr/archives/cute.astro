---
import Archives from "../../../layouts/Informative.astro";

import { getCollection } from "astro:content";

const archives = await getCollection("archives");

let index = 0;

const lang = "fr";

archives.forEach((archive, idx) => {
  if (archive.id.split("/")[1] === lang) index = idx;
});

const props = await archives[index].render();
const { Content } = await archives[index].render();
---

<Archives props={props} >
<Content />
</Archives>


